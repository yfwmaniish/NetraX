# H4$HCR4CK$ Dark Web Monitoring Tool Configuration
# Copy this file to .env and fill in your actual values

# ==========================================
# GEMINI AI CONFIGURATION
# ==========================================
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=AIzaSyAoCdXfVSF5pWNkaDoDUWPo_491HLK3OWk

# ==========================================
# DASHBOARD CONFIGURATION
# ==========================================
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=change_this_password

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# SQLite database file path (relative to project root)
DATABASE_PATH=./decimal_scraped_data.db

# ==========================================
# PROXY CONFIGURATION
# ==========================================
# Tor proxy settings (default for Tor)
HTTP_PROXY=http://127.0.0.1:8118
HTTPS_PROXY=http://127.0.0.1:8118

# ==========================================
# OCR CONFIGURATION
# ==========================================
# Tesseract OCR executable path (leave empty for auto-detection)
TESSERACT_CMD=
# Default OCR language
OCR_DEFAULT_LANGUAGE=eng

# ==========================================
# AI PROCESSING SETTINGS
# ==========================================
# Enable/disable AI processing (true/false)
AI_PROCESSING_ENABLED=true
# Maximum text length for Gemini processing (characters)
AI_MAX_TEXT_LENGTH=4000
# AI processing timeout in seconds
AI_TIMEOUT=30

# ==========================================
# CRAWLER SETTINGS
# ==========================================
# Default download delay between requests (seconds)
CRAWLER_DELAY=1.5
# Maximum number of pages to crawl per run
MAX_PAGES_PER_RUN=1000
# Request timeout in seconds
REQUEST_TIMEOUT=30

# ==========================================
# LOGGING CONFIGURATION
# ==========================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Log file path (leave empty to log to console only)
LOG_FILE=./logs/darkweb_monitor.log

# ==========================================
# SECURITY SETTINGS
# ==========================================
# Flask secret key for sessions (generate a random one)
FLASK_SECRET_KEY=your_secret_key_here_generate_random
# Session timeout in minutes
SESSION_TIMEOUT=120

# ==========================================
# EXPORT SETTINGS
# ==========================================
# Default export format (json, csv, excel)
DEFAULT_EXPORT_FORMAT=json
# Maximum records per export
MAX_EXPORT_RECORDS=10000

# ==========================================
# NOTIFICATION SETTINGS (Future Enhancement)
# ==========================================
# Email settings for alerts
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
ALERT_EMAIL_TO=

# Webhook URL for alerts
WEBHOOK_URL=

# ==========================================
# RATE LIMITING
# ==========================================
# API requests per minute for Gemini
GEMINI_RPM_LIMIT=60
# Crawler requests per minute
CRAWLER_RPM_LIMIT=30
